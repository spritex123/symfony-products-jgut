{% extends 'AppBundle:Default:index.html.twig' %}

{% block body %}
    <div class="blue">
        <h2>Authorization:index.html.twig</h2>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('authorization') }}" method="post" novalidate>
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" />

            <button type="submit">Authorization</button>
        </form>
        <div><a href="{{ path('forgot_password') }}">Forgot password?</a></div>
    </div>
{% endblock %}
